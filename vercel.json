{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "pnpm install",
  "builds": [
    {
      "src": "packages/web/package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "cd ../.. && pnpm install",
        "buildCommand": "cd ../.. && pnpm run build"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/packages/web/$1" }
  ]
}
